{
	"name": "filsh/yii2-app-platform",
	"description": "Yii 2 Platform Application Template",
	"keywords": ["yii", "framework", "platform", "application template"],
	"type": "project",
	"license": "BSD-3-Clause",
	"support": {
		"email": "imaliy.filsh@gmail.com",
		"source": "https://github.com/filsh/yii2-app-platform"
	},
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"yiisoft/yii2": "*",
		"yiisoft/yii2-swiftmailer": "*",
		"yiisoft/yii2-bootstrap": "*",
		"yiisoft/yii2-debug": "*",
		"yiisoft/yii2-gii": "*",
		"filsh/yii2-platform": "*"
	},
	"scripts": {
		"post-create-project-cmd": [
			"yii\\composer\\Installer::setPermission"
		]
	},
	"extra": {
		"writable": [
			"backend/runtime",
			"backend/web/assets",

			"console/runtime",
			"console/migrations",

			"rest/runtime",
			
			"frontend/runtime",
			"frontend/web/assets"
		]
	}
}
